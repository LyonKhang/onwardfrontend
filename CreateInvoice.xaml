<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.CreateInvoice"
             Title="CreateInvoice">
    <VerticalStackLayout>
        <Entry x:Name="InvoiceName" Placeholder="Enter Name" />
            <Entry x:Name="InvoiceRole" Placeholder="Enter Role" />
            <Button Text="Cancel" Clicked="Cancel" />
            <Button Text="Submit" Clicked="Submit" />
    </VerticalStackLayout>
</ContentPage>