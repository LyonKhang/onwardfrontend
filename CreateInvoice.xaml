<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.CreateInvoice"
             Title="CreateInvoice">
    <VerticalStackLayout>
            <!--<Entry x:Name="InvCustomer" Placeholder="Customer"/>-->
            <!--DropdownBox here for contact person-->
            <!--DropdownBox for employees here-->
            <Entry x:Name="InvRole" Placeholder="Enter Role" />
            <!--ItemSelector page-->
            <Entry x:Name="InvDate" IsEnabled="False" />
            <!--Automatically generate?-->
            <Entry x:Name="InvNumber" Placeholder="Invoice Number" />
            <Entry x:Name="InvMisc" Placeholder="Other Comments" />
            <Button Text="Cancel" Clicked="Cancel" />
            <Button Text="Submit" Clicked="Submit" />
    </VerticalStackLayout>
</ContentPage>