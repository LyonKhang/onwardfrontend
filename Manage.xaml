<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onward.Manage"
             Title="Manage">
    <!-- This is all the button for the tabs manage(Vinh)-->
    <VerticalStackLayout Spacing="6" Margin="50">
        <Grid RowDefinitions="*,*,*,*,*">
            <Image VerticalOptions="Center"
WidthRequest="80" Margin="30"  Source="manage.png"  
/>
            <!--TODO: fix Invoices-->
            <Button Text="View Invoices" Grid.Row="1" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Clicked="ViewInvoices" />
            <!--Bewlow still work-->
            <Button Text="View Line Items" Grid.Row="2" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center"  Clicked="ViewLineItems" />
        <Button Text="View Customers" Grid.Row="3" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Clicked="ViewCustomers" />
            <Button Text="View Employees" Grid.Row="4" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Clicked="ViewEmployees" />
        
        </Grid>
    </VerticalStackLayout>
</ContentPage>