<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.CreateCustomer"
             Title="CreateCustomer">

    <VerticalStackLayout  Spacing="6" Margin="50">
        <Grid RowDefinitions="*,*,*,*,*">
            <Entry x:Name="CustCompany" Grid.Row="1" VerticalOptions="Center"
                    WidthRequest="300" Margin="10"
                HorizontalOptions="Center"  Placeholder="Company"  />
            <Entry x:Name="CustContactPerson" Grid.Row="2"  VerticalOptions="Center"
                    WidthRequest="300" Margin="10"
                HorizontalOptions="Center"  Placeholder="Contact Person" />
            <Button Text="Cancel" Grid.Row="3"  VerticalOptions="Center"
                    WidthRequest="300" Margin="10"
                HorizontalOptions="Center"  Clicked="Cancel"/>
            
            <Button Text="Submit" Grid.Row="4" VerticalOptions="Center"
                    WidthRequest="300" Margin="10"
                HorizontalOptions="Center" Clicked="Submit" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>