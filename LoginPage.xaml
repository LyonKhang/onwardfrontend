<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.LoginPage"
             Title="Login">
        <VerticalStackLayout>
            <Grid RowDefinitions="*,*,*,*">
            <Entry x:Name="Username"  Grid.Row="1" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Placeholder="Username" />
            <Entry x:Name="Password" Placeholder="Password"  Grid.Row="2" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" IsPassword="true" />
            <Button Text="Login" Clicked="LoginAndAuthenticate"  Grid.Row="3" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" />
            </Grid>
        </VerticalStackLayout>
</ContentPage>
