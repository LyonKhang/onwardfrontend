<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.LoginPage"
             Title="Login">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*,*,*" >
            <Image VerticalOptions="Center"
                   WidthRequest="200" Margin="30" Grid.Row="1" Source="Logo.png"  
                   SemanticProperties.Description="Create,Edit,View,in one"
                   />
            <Label 
            Text="Welcome to ONWaRD!"
            FontSize="Title"
            Grid.Row="2"  Margin="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry x:Name="Username"  Grid.Row="3" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Placeholder="Username" />
            <Entry x:Name="Password" Placeholder="Password"  Grid.Row="4" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" IsPassword="true" />
            <Button Text="Login" Clicked="LoginAndAuthenticate"  Grid.Row="5" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" />
            </Grid>
        </VerticalStackLayout>
</ContentPage>
