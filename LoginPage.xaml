<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.LoginPage"
             Title="Login">
        <VerticalStackLayout>
            <Grid RowDefinitions="*,*,*">
                <Entry x:Name="Username" Placeholder="Username" />
                <Entry x:Name="Password" Placeholder="Password" Grid.Row="1" IsPassword="true" />
                <Button Text="Login" Clicked="LoginAndAuthenticate" Grid.Row="2" />
            </Grid>
        </VerticalStackLayout>
</ContentPage>
