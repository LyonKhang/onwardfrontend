<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onward.CreateLineItem"
             Title="CreateLineItem">
    <StackLayout>
        <Entry x:Name="EmpID" Placeholder="Enter ID" />
        <Entry x:Name="EmpName" Placeholder="Enter Name" />
        <Entry x:Name="EmpQuantity" Placeholder="Enter Quanity" />
        <Entry x:Name="EmpDescription" Placeholder="Enter Description" />
        <Entry x:Name="EmpPrice" Placeholder="Enter Price" />
        <Button Text="Cancel" Clicked="Cancel" />
        <Button Text="Submit" Clicked="Submit" />
    </StackLayout>
</ContentPage>
