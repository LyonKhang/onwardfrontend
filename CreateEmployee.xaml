<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Onward"
             x:Class="Onward.CreateEmployee"
             Title="CreateEmployee">

    <VerticalStackLayout  Spacing="6" Margin="50">
        <Grid RowDefinitions="*,*,*,*,*">
            <Image VerticalOptions="Center"
WidthRequest="80" Margin="30"  Source="employee.png"  
/>
                <Entry x:Name="EmpName"  Grid.Row="1" VerticalOptions="Center"
                   WidthRequest="300" Margin="10" IsSpellCheckEnabled="True"  IsTextPredictionEnabled="True"
                   HorizontalOptions="Center" Placeholder="Enter Name" />
            <Entry x:Name="EmpRole"  Grid.Row="2" VerticalOptions="Center" IsTextPredictionEnabled="True"
                   WidthRequest="300" Margin="10" IsSpellCheckEnabled="True"
                   HorizontalOptions="Center" Placeholder="Enter Role" />
        <Button Text="Cancel"  Grid.Row="3" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Clicked="Cancel" />
        <Button Text="Submit"  Grid.Row="4" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center" Clicked="Submit" />
         </Grid>
    </VerticalStackLayout>
</ContentPage>