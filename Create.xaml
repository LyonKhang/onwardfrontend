<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onward.Create"
             Title="Create">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*,*">
            <Button Text="   New Invoice   " Grid.Row="1" VerticalOptions="Center"
    HorizontalOptions="Center" />
            <Button Text="New Line Item" Grid.Row="2" VerticalOptions="Center"
                HorizontalOptions="Center" Clicked="NewLineItemClicked"/>
            <Button Text="New Customer" Grid.Row="3"  VerticalOptions="Center"
                HorizontalOptions="Center" Clicked="NewCustomerClicked"/>
            <Button Text="New Employee" Grid.Row="4"  VerticalOptions="Center"
                HorizontalOptions="Center" Clicked="NewEmployeeClicked" />

        </Grid>
    </VerticalStackLayout>
</ContentPage>